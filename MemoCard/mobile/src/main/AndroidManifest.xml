<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vntcaro.memocard" >

    <application
        android:name=".Utils.AplicationData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        //Google Play Service
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        //ActiveAndroid DataBase
        <meta-data
            android:name="AA_DB_NAME"
            android:value="memocard.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.ViewDeckActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vntcaro.memocard.MainActivity" />
        </activity>
        <activity
            android:name=".View.AddCardActivity"
            android:parentActivityName=".View.ViewDeckActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vntcaro.memocard.View.ViewDeckActivity" />
        </activity>
        <activity
            android:name=".View.StudyCardsView"
            android:parentActivityName=".View.ViewDeckActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vntcaro.memocard.View.ViewDeckActivity" />
        </activity>
    </application>

</manifest>
